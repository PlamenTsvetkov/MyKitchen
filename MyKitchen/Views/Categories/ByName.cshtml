@model CategoryViewModel
@{
    this.ViewData["Title"] = Model.Name;
}
<a asp-controller="Kitchens" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">Add your kitchen</a>
<img src="@Model.ImageUrl" width="100" class="mr-3" alt="@Model.Name">
<h1 class="display-3">@Model.Name</h1>
<div class="alert alert-info">
    @Model.Description
</div>

@foreach (var kitchen in Model.KitchenPosts)
{
    <div class="media-body">
        <h4 class="media-heading"><a asp-controller="Kitchens" asp-action="ById" asp-route-id="@kitchen.Id">@kitchen.Price</a></h4>
        <p>@kitchen.ShortDescription</p>
        <ul class="list-inline list-unstyled text-right">
            <li class="list-inline-item">
                <i class="fas fa-user-edit"></i> @kitchen.UserName
            </li>
            <li class="list-inline-item">
                <i class="fas fa-calendar-alt"></i> @kitchen.CreatedOn
            </li>
            <li class="list-inline-item">
                <i class="fas fa-comment-dots"></i> @kitchen.CommentsCount comments
            </li>
        </ul>
    </div>
}

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="forumCategory"
                   asp-route-name="@this.Model.Name"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route="forumCategory"
                   asp-route-name="@this.Model.Name"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="forumCategory"
                   asp-route-name="@this.Model.Name"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

