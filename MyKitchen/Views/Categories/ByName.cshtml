@model CategoryViewModel
@{
    this.ViewData["Title"] = Model.Name;
}
<a asp-controller="Kitchens" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">Add your kitchen</a>
<img src="@Model.ImageUrl" width="100" class="mr-3" alt="@Model.Name">
<h1 class="text-center mt-2">@Model.Name</h1>
<div class="alert alert-info">
    @Model.Description
</div>
<div class="row">
@foreach (var kitchen in Model.Kitchens)
{
     <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@kitchen.ImageUrl" alt="@kitchen.Price @kitchen.PreparationTime - @kitchen.TypeOfDoorMaterial.ToString() (@kitchen.CategoryName)" width="300", height="600">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">Kitchen Category: @kitchen.CategoryName</h5>
                    <h5 class="card-title text-center">Price: @kitchen.Price</h5>
                    <h5 class="card-title text-center">Preparation Time: @kitchen.PreparationTime</h5>
                    <h5 class="card-title text-center">Material: @kitchen.TypeOfDoorMaterial.ToString()</h5>
                    <a asp-controller="Kitchens" asp-action="Details" asp-route-id="@kitchen.Id" class="btn btn-primary">View</a>
                    @*@if (ViewBag.AllowCarEdit == true || User.IsAdmin())
                    {
                        <a asp-controller="Cars" asp-action="Edit" asp-route-id="@kitchen.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Cars" asp-action="Delete" asp-route-id="@kitchen.Id" class="btn btn-danger">Delete</a>
                    }*@
                </div>
            </div>
        </div>
}
</div>
<hr />
@if (!Model.Kitchens.Any())
{
    <h2 class="text-center">No kitchen found by the given category!</h2>
}
else
{
  <nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="kitchenCategory"
                   asp-route-name="@this.Model.Name"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route="kitchenCategory"
                   asp-route-name="@this.Model.Name"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="kitchenCategory"
                   asp-route-name="@this.Model.Name"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>  
}


