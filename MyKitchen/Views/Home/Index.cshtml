@{
    ViewData["Title"] = "My Kitchen";
}

<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
    <cache expires-after="TimeSpan.FromDays(10)" vary-by-query="id">
        <h1 class="display-3">@DateTime.UtcNow</h1>
    </cache>
    
</div>
<hr />
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 media">
            <img src="@category.ImageUrl" width="100" class="mr-3" alt="@category.Name">
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@category.Url">
                        @category.Name (@category.KitchensCount)
                    </a>
                </h5>
                @category.Description
            </div>
        </div>
    }
</div>

