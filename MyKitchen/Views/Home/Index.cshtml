@model IndexViewModel
@{
    ViewData["Title"] = "My Kitchen";
}
@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}
<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>

    <div id="carouselExampleCaptions" class="carousel slide w-75 p-3 d-flex mx-auto d-block" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner ">
            @for (int i = 0; i < Model.Kitchens.Count(); i++)
            {
                var kitchen = Model.Kitchens[i];
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-100" src="@kitchen.ImageUrl" style="width:25%; height: 400px;" alt="@kitchen.Description">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><a class="btn btn-primary" asp-controller="Kitchens" asp-action="Details" asp-route-id="@kitchen.Id" asp-route-information="@kitchen.GetInformation()">Details</a></h5>
                    </div>
                </div>
            }
             <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div>
       
    </div>
</div>
<hr />
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 media">
            <img src="@category.ImageUrl" width="100" class="mr-3" alt="@category.Name">
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@category.Url">
                        @category.Name (@category.KitchensCount)
                    </a>
                </h5>
                @category.Description
            </div>
        </div>
    }
</div>

