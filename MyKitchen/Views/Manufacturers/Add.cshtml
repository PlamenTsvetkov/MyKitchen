@model ManufacturerFormModel

@{
    ViewBag.Title = "Add Kitchen";
}

<form method="post" >

    <select id="CountryId" name="Countries" asp-for="CountryId" asp-items=>
         <option>Select Country</option>
         </select>

     <select id="CityList">
         <option>Select City</option>
         </select>

     <div class="form-group">
        <label asp-for="Address.Name">Address Name</label>
        <input asp-for="Address.Name" class="form-control" />
        <span asp-validation-for="Address.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.Number">Address Number</label>
        <input asp-for="Address.Number" class="form-control" />
        <span asp-validation-for="Address.Number" class="text-danger"></span>
    </div>

    <input class="btn btn-primary mt-3" type="submit" value="Save" />

</form>
@section Scripts{
    <script type="text/javascript">
        
    @(document).ready(function (){
        $("#CountryList").change(function () {
           $@("#CityList").empty();
           $.ajax({
               type: 'GET',
               url: '@Url.Action("LoadCity")',
           })

        })
    }
    </script>
}




