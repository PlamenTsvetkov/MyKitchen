@model KitchensListViewModel


@{
    ViewBag.Title = "Kitchens Administration";
}

<h1>All Kitchens</h1>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">UserName</th>
            <th scope="col">Image</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Meter</th>
            <th scope="col">Preparation Time</th>
            <th scope="col">Manufacturer</th>
            <th scope="col">Average Vote</th>
            <th scope="col">Comments</th>
            <th scope="col" >Deleted</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kitchen in Model.Kitchens)
        {
        <tr>
            <td scope="col">@kitchen.Id</td>
            <td scope="col">@kitchen.UserName</td>
            <td> <img src="@kitchen.ImageUrl" width="100" /> </td>
            <td scope="col">@kitchen.CategoryName</td>
            <td scope="col">@kitchen.Price</td>
            <td scope="col">@kitchen.KitchenMeter</td>
            <td scope="col">@kitchen.PreparationTime</td>
            <td scope="col">@kitchen.МanufacturerName</td>
            <td scope="col">@kitchen.AverageVote</td>>
            <td scope="col">@kitchen.CommentsCount</td>
             <td scope="col">@(kitchen.IsDeleted ? "Yes" : "No")</td>
            <td scope="col">@(kitchen.IsPublic ? "Yes" : "No")</td>
            <td scope="col">
                 <form method="post" asp-area="" asp-controller="Kitchens" asp-action="Delete" asp-route-id="@kitchen.Id">
                      <button class="btn btn-danger float-right ml-3">Delete</button>
                    </form>
                <a asp-area="" asp-controller="Kitchens" asp-action="Edit" asp-route-id="@kitchen.Id" class="btn btn-warning float-right ml-3">Edit</a>
                <a asp-area="Admin" asp-controller="Kitchens" asp-action="ChangeVisibility" asp-route-id="@kitchen.Id" class="btn btn-info float-right ml-3">@(kitchen.IsPublic ? "Hide" : "Show")</a>
                <a asp-area="" asp-controller="Kitchens" asp-action="Details" asp-route-id="@kitchen.Id" asp-route-information="@kitchen.GetInformation()" class="btn btn-primary float-right ml-3">View</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<hr />
<partial name="_PagingPartial" model="@Model" />
