@model IndexManufacturerViewModel

@{
    ViewBag.Title = "Manufacturer Index Page";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1 class="mb-4 text-center">Manufacturer Area</h1>

<div class="row">

    <div class="col-lg-3 col-6">

        <div class="small-box bg-success">
            <div class="inner">
                 <h3>@Model.PublicKitchensNumber</h3>
                <p>Public Kitchens</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a asp-area="Manufacturer" asp-controller="Kitchens" asp-action="All" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-6">

        <div class="small-box bg-danger">
            <div class="inner">
                 <h3>@Model.NotPublicKitchensNumber</h3>
                <p>Not Public Kitchens</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a asp-area="Manufacturer" asp-controller="Kitchens" asp-action="All" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

</div>